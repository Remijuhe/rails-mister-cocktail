<div class="navbar-wagon">
  <h1>Funky Cocktails</h1>
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <%= link_to "Add new cocktail", new_cocktail_path, class:"btn btn-success"%>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cocktail.image %>);">
            <div class="card-category"><%= link_to "#{cocktail.name}", cocktail_path(cocktail.id)%></div>
          </div>
        </div>
      <% end %>
    </div>
  </div>




